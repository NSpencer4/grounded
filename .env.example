# =============================================================================
# Development Environment
# =============================================================================
NODE_ENV=development
REMIX_DEV_DEBUG=true

# =============================================================================
# AWS Configuration (Local Development)
# =============================================================================
AWS_REGION=us-east-1
WS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# =============================================================================
# Localhost Services (Docker Compose)
# =============================================================================

# Kafka Broker
KAFKA_BROKERS=localhost:9092
# Kafka UI (Web Interface)
KAFKA_UI_URL=http://localhost:8080

# DynamoDB Local
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMO_TABLE_NAME=grounded-datastore
# DynamoDB Admin UI
DYNAMODB_ADMIN_URL=http://localhost:8001

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=grounded

# LocalStack (Local AWS Services)
LOCALSTACK_ENDPOINT=http://localhost:4566

# =============================================================================
# Ruby APIs (Docker Compose)
# =============================================================================
CONVERSATION_COMMANDS_API_URL=http://localhost:3001
CONVERSATION_UPDATES_API_URL=http://localhost:3002

# =============================================================================
# Lambda Functions (Local - AWS Lambda RIE)
# =============================================================================
