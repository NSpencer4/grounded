# ============================================
# SES SMTP Configuration
# ============================================

# Required: Your domain for sending emails
ses_domain = "example.com"

# Required: Default from email address
ses_from_email = "noreply@example.com"

# Optional: Test email for sandbox mode (needed before domain verification)
# ses_test_email = "test@example.com"

# Optional: Route53 Zone ID for automatic DNS record creation
# Leave empty if you manage DNS elsewhere
# ses_domain_route53_zone_id = "Z1234567890ABC"

# Optional: Email for DMARC reports
# ses_dmarc_email = "dmarc@example.com"

